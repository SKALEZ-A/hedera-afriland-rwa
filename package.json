{
  "name": "globalland-rwa-platform",
  "version": "1.0.0",
  "description": "Global real estate tokenization platform built on Hedera Hashgraph",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:contracts": "hardhat test",
    "compile:contracts": "hardhat compile",
    "deploy:testnet": "hardhat run scripts/deploy.js --network hederaTestnet",
    "deploy:mainnet": "hardhat run scripts/deploy.js --network hederaMainnet",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "keywords": [
    "hedera",
    "real-estate",
    "tokenization",
    "rwa",
    "blockchain"
  ],
  "author": "GlobalLand Team",
  "license": "MIT",
  "dependencies": {
    "@hashgraph/sdk": "^2.49.0",
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "socket.io": "^4.7.4",
    "stripe": "^14.5.0",
    "winston": "^3.11.0"
  },
